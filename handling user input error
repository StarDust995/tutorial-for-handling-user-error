while True:
    try:
        x=int(input("please enter the first number: "))
        y=int(input("please enter the second number: "))
    except:
        print("please enter a valid value")
        continue
    def sum(x,y):
        z=x+y
        print("your result is: {}".format(z))
    sum(x,y)
    print("*"*40)
    ans=input("do you want to restart?(yes/no)\n").lower()
    if ans=='yes':
        continue
    else:
        break
